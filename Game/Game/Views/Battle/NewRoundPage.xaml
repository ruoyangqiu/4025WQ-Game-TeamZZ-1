<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.NewRoundPage">

    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">

            <StackLayout Style="{StaticResource VerticalStack}">

                <Label Text="Round Preview" Style="{StaticResource CenterMessageStyle}"/>
                <Label Text="You can click on characters to swap positions" Style="{StaticResource LabelStyle}"/>
                <!--BattleBoard Grid-->
                <StackLayout WidthRequest="650" HeightRequest="650">
                    <!--BattleBoard Grid-->
                    <Grid x:Name="BattleBoard">
                    </Grid>
                </StackLayout>

                <Button Clicked="BeginButton_Clicked" Text="Begin"/>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>